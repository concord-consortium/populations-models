include includes/_helpers
doctype html
html
  head
    include includes/shared-headers
    include includes/shared-css
    include includes/shared-js
    include includes/resize

    // model files here
    +script(src="species/fast-plants-roots-clumping.js")
    +script(src="environments/desert.js")
    +script(src="models/grass-variation.js")
    style(type="text/css").
      body {
        margin: 0;
      }

      #wrapper {
        display: flex;
      }

      #meta {
        padding: 2px;
        display: flex;
        flex-direction: column;
      }

      #meta .left {
        margin-top: 35px;
        display: flex;
      }

      #meta .left>div, .level {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      #timer {
        padding-left: 27px;
      }

      #time {
        font-size: 1.5em;
      }

      #meta .right {
        margin-left: 4px;
      }

      #environment {
        padding: 0;
        overflow: unset;
      }

      #environment>div {
        width: 525px;
      }

      .title {
        font-weight: bold;
        padding-right: 5px;
      }

      #water-level {
        height: 100px;
        width: 18px;
        border-radius: 10px;
        background-color: #cccccc;
        position: relative;
        padding: 2px;
      }

      #water-level-indicator {
        position: absolute;
        bottom: 0;
        left: 3px;
        height: 100%;
        max-height: 100px;
        margin-top: 2px;
        margin-bottom: 2px;
        width: 16px;
        border-radius: 8px;
        background-color: blue;
      }

      #modal-popup {
        opacity: 1;
        position: absolute;
        left: 60px;
        top: 100px;
        width: 300px;
        background-color: white;
        padding: 10px;
        transition: opacity 1s;
      }

      #modal-popup.hidden {
        opacity: 0;
        pointer-events: none;
      }

      #modal-frame {
        border: 5px solid blue;
        padding: 10px;
      }

      #modal-frame>div {
        padding-bottom: 15px;
      }

      #modal-frame select {
        font-size: 1.1em;
      }

      #modal-frame button {
        margin-left: 89px;
        width: 80px;
      }

      #meta #chart {
        height: 254px;
      }

  body
    #wrapper
      #environment
      #meta
        .left
          #water-level-container
            .title= "Amount of rain"
            .level
              div= "Lots of rain"
              #water-level
                #water-level-indicator
              div= "Little rain"

          #timer
            .title="Time:"
            #time="0"

        .right
          #chart= "Chart"

      #modal-popup.hidden
        #modal-frame
          div="Select an amount of rain to test, and then run the experiment!"
          div
            select#water-level-select
              option="Most"
              option="Medium"
              option="Least"
          button(onclick='model.setRain()')="Ok"

